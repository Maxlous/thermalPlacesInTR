<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%=thermal.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= thermal.title %></h5>
        <p class="card-text"><%=thermal.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%=thermal.location %></li>
        <li class="list-group-item">$<%=thermal.price %>/night</li>
      </ul>
      <div class="card-body">
        <a class="card-link btn btn-info" href="/thermals/<%=thermal._id%>/edit"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/thermals/<%=thermal._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <div class="card-footer text-muted">2 Days Ago</div>
    </div>
  </div>
  <div class="col-6">
    <h2>Leave a Comment</h2>
    <form
      action="/thermals/<%=thermal._id%>/reviews"
      novalidate
      method="POST"
      class="mb-3 validated-form"
    >
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          type="range"
          class="form-range"
          min="1"
          max="5"
          name="review[rating]"
          id="rating"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          required
          id="body"
          cols="30"
          rows="3"
        ></textarea>
        <div class="valid-feedback">Looks Good!!</div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% for (let review of thermal.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating: <%= review.rating %></h5>
        <p class="card-text"><%= review.body %></p>
        <form
          action="/thermals/<%=thermal._id%>/reviews/<%=review._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger btn-sm">Delete</button>
        </form>
      </div>
    </div>
    <% } %>
  </div>
</div>
