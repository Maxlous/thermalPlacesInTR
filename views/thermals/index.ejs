<% layout("layouts/boilerplateIndex") %>
  <div id="cluster-map"></div>
  <article class="container">
  <h1 id="allThermals">All Thermals</h1>
  <% for (let thermal of thermals) { %>
    <article class="card mb-4 cardBod">
      <div class="row">
        <div class="col-md-4">
          <%if(thermal.images.length){ %>
            <img class="img-fluid" alt="" src="<%=thermal.images[0].url%>">
            <% } else{%>
              <img class="img-fluid" src="" alt="">
              <% } %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title primaryColor">
              <%= thermal.title %>
            </h5>
            <p class="card-text primaryColor">
              <%=thermal.description %>
            </p>
            <p class="card-text">
              <small class="text-muted">
                <%=thermal.location %>
              </small>
            </p>
            <a class="btn indexBut" href="/thermals/<%=thermal._id  %> ">View <%=thermal.title %>
            </a>
          </div>
        </div>
      </div>
    </article>
    <% } %>
  </article>
      <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        //this line breaks due to VS code for ejs support, so save with "non-format"
        const thermals = { features: <%- JSON.stringify(thermals) %>}      
      </script>

      <script src="/javascripts/clusterMap.js"></script>