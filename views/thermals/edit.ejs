<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">Edit Thermal</h1>
  <div class="col-6 offset-3">
    <form action="/thermals/<%=thermal.id%>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="thermal[title]"
          value="<%=thermal.title %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="thermal[location]"
          value="<%=thermal.location %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="thermal[image]"
          value="<%=thermal.image %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Thermal Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            id="price"
            name="thermal[price]"
            value="<%=thermal.price %>"
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="thermal[description]"
        >
<%=thermal.description %> </textarea
        >
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Save Thermal</button>
      </div>
    </form>
    <a href="/thermals/<%= thermal._id%>">Back to Thermal</a>
  </div>
</div>
