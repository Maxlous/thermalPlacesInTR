<% layout("layouts/boilerplate")%>
    <article class="container d-flex justify-content-center align-items-center mt-0">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://res.cloudinary.com/maxlous/image/upload/v1614266795/devon-hawkins-b7S-gT-FeVk-unsplash_ysmf1r.jpg"
                        alt="" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title primaryColor">Login</h5>
                        <form action="/login" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label primaryColor" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus
                                    required />
                                <div class="valid-feedback">Looks Good!</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label primaryColor" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required />
                                <div class="valid-feedback">Looks Good!</div>
                            </div>
                            <div class="d-grid gap-2 col-6 mx-auto">
                                <button class="btn btn-success btnHov" type="submit">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </article>